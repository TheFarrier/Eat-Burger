<h1>Burgers</h1>

<div class="container">
  <div class="not-devoured">
    <h2>Not Devoured</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li class="list-item">
        <span>{{this.burger_name}}</span>
        <form action="/api/burgers/{{this.id}}" method="POST" class="devour-form">
          <button class="devour" type="submit">
            Devour!
          </button>
        </form>

      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>



  <div class="devoured">
    <h2>Devoured</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        <p>
          {{this.burger_name}}
        </p>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="container">
  <div class="add">
    <h2>Add a Burger</h2>
    <div>
      <form action="/api/burgers" method="POST">
        <textarea type="text" name="name"></textarea>

        <button type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>